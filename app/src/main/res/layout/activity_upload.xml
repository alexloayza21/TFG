<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chainsaw_man_panel_autronautas"
    tools:context=".UploadProject">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="50dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/white"
                android:alpha="0.9"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:padding="20dp"
                    android:text="Upload!!"
                    android:textAlignment="center"
                    android:textColor="@color/secondary2"
                    android:textSize="50dp"
                    android:textStyle="bold|italic" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="30dp"
                android:alpha="0.9"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/custom_edittexto"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PORTADA"
                            android:textSize="30dp"
                            android:fontFamily="casual"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10dp"/>

                        <ImageView
                            android:id="@+id/uploadImage"
                            android:layout_width="150dp"
                            android:layout_height="210dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/upload_image" />


                    </LinearLayout>



                    <Button
                        android:id="@+id/btn_pages"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/btn_shape"
                        android:fontFamily="casual"
                        android:text="PAGINAS"
                        android:textSize="18dp"
                        android:textStyle="bold|italic"
                        app:cornerRadius="20dp" />


                    <EditText
                        android:id="@+id/uploadTitulo"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/custom_edittexto"
                        android:focusable="true"
                        android:hint="Título de tu proyecto"
                        android:padding="8dp"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/uploadDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/custom_edittexto"
                        android:hint="Descripción de tu proyecto"
                        android:padding="8dp"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/btn_upload"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/btn_shape"
                        android:fontFamily="casual"
                        android:text="GUARDAR"
                        android:textSize="18dp"
                        android:textStyle="bold|italic"
                        app:cornerRadius="20dp" />

                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_shape"
                        android:fontFamily="casual"
                        android:text="CANCELAR"
                        android:textSize="18dp"
                        android:textStyle="bold|italic"
                        app:cornerRadius="20dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

</LinearLayout>